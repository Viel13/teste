<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_finalizar_compra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.logonrm.vendingmachinenatura.FinalizarCompra">

    <TextView android:id="@+id/txtProdutos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carrinho"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView android:id="@+id/txtData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:text="25 de maio de 2017"
        android:textSize="25dp"/>

    <TextView android:id="@+id/txtHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@id/txtData"
        android:layout_centerHorizontal="true"
        android:text="Período da tarde (das 12:00 às 18:00) "
        android:textSize="20dp"/>

    <TextView android:id="@+id/txtLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtHora"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="Estação Barra Funda"
        android:textSize="25dp"/>

    <TextView android:id="@+id/txtEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@id/txtLocal"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:text="Rua Auro Soares de Moura, 664 - Barra Funda - São Paulo, SP - 01154-060"
        android:textSize="18dp"/>


    <TextView android:id="@+id/txtProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEndereco"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="Produtos"
        android:textSize="25dp"/>

    <TextView android:id="@+id/txtPerfume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfume"
        android:textSize="20dp"
        android:layout_below="@id/txtProduto"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"/>

    <ImageView android:id="@+id/imgPerfume"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/txtPerfume"
        android:layout_below="@id/txtProduto"
        android:layout_marginLeft="160dp"
        android:src="@drawable/perfume" />



    <TextView android:id="@+id/txtDesodorante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_below="@id/txtPerfume"
        android:layout_marginTop="12dp"
        android:text="Desodorante"
        android:textSize="20dp"/>

    <ImageView android:id="@+id/imgBatom"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/txtDesodorante"
        android:layout_below="@id/imgPerfume"
        android:layout_marginLeft="122dp"
        android:src="@drawable/desodorante"/>



    <TextView android:id="@+id/txtBatom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDesodorante"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="11dp"
        android:text="Batom"
        android:textSize="20dp"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/txtBatom"
        android:layout_marginLeft="175dp"
        android:layout_below="@id/imgBatom"
        android:src="@drawable/batom"/>

    <Button android:id="@+id/btnConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_centerHorizontal="true"
        android:text="Confirmar Compra"
        android:onClick="ConfirmarCompra"/>

</RelativeLayout>
